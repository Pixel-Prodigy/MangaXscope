// Prisma Schema for MangaXScope
// 
// DATABASE ARCHITECTURE:
// - Database stores both MangaDex manga and Consumet webcomics
// - Manga section: MangaDex (Japanese manga)
// - Webcomics section: Consumet (manhwa, manhua, webtoons)
// - Source and provider fields enable multi-source support
// - Trigram indexes for fuzzy search

generator client {
  provider        = "prisma-client-js"
  engineType      = "library"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
}

// =============================================================================
// MAIN MODELS
// =============================================================================

/// Cached manga/webcomic metadata from external sources
model Manga {
  id                     String        @id // Source-specific ID (MangaDex UUID or generated for Consumet)
  
  // Source tracking
  source                 DataSource    @default(MANGADEX)
  sourceId               String?       // Original ID from source (for reference)
  provider               String?       // Consumet provider name (mangakakalot, asurascans, etc.)
  providerSeriesId       String?       // Provider-specific series ID for Consumet
  
  // Content classification
  contentType            ContentType   @default(MANGA)
  
  // Core metadata (normalized)
  title                  String
  altTitles              String[]      // For search expansion
  description            String?       @db.Text
  status                 Status        @default(UNKNOWN)
  year                   Int?
  contentRating          ContentRating @default(SAFE)
  publicationDemographic Demographic?
  originalLanguage       String        // ja, ko, zh, en
  
  // Chapter info
  lastChapter            String?
  lastVolume             String?
  totalChapters          Int?
  
  // Media
  coverArtId             String?
  coverImage             String?       // Direct cover URL for Consumet content
  
  // Popularity metrics
  followedCount          Int           @default(0)
  rating                 Float?
  
  // Cache management
  createdAt              DateTime      @default(now())
  updatedAt              DateTime      @updatedAt
  sourceUpdatedAt        DateTime?     // Track source updates (was mangaDexUpdatedAt)
  
  // TTL for cache expiration (optional, can be handled in app logic)
  expiresAt              DateTime?
  
  // Relations
  tags                   MangaTag[]

  // Indexes for efficient queries
  @@index([source])
  @@index([title])
  @@index([status])
  @@index([originalLanguage])
  @@index([year])
  @@index([totalChapters])
  @@index([followedCount])
  @@index([sourceUpdatedAt])
  @@index([contentRating])
  @@index([expiresAt])
  @@index([contentType])
  @@index([provider])
  
  // Unique constraint for Consumet sources to prevent duplicates
  @@unique([source, provider, providerSeriesId], name: "unique_source_provider_id")
}

/// Cached tags for filtering
model Tag {
  id    String   @id // Source-specific ID
  name  String
  group TagGroup

  mangas MangaTag[]

  @@index([group])
  @@index([name])
}

/// Many-to-many relation between Manga and Tag
model MangaTag {
  mangaId String
  tagId   String

  manga Manga @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  tag   Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([mangaId, tagId])
  @@index([tagId])
}

/// Sync metadata for tracking MangaDex database updates
model SyncMetadata {
  id                  String     @id @default("singleton")
  lastFullSync        DateTime?
  lastIncrementalSync DateTime?
  totalMangaCount     Int        @default(0)
  syncStatus          SyncStatus @default(IDLE)
  lastError           String?
  updatedAt           DateTime   @updatedAt
}

/// Sync metadata for tracking Webcomic (Consumet) indexing
model WebcomicSyncMetadata {
  id                  String     @id @default("webcomic-singleton")
  lastFullSync        DateTime?
  lastProvider        String?    // Resume point: last provider being indexed
  lastQuery           String?    // Resume point: last query letter (a-z, 0-9)
  totalIndexed        Int        @default(0)
  syncStatus          SyncStatus @default(IDLE)
  lastError           String?
  updatedAt           DateTime   @updatedAt
}

// =============================================================================
// ENUMS
// =============================================================================

/// Data source identifier
enum DataSource {
  MANGADEX
  CONSUMET
}

/// Content type classification
enum ContentType {
  MANGA
  MANHWA
  MANHUA
  WEBTOON
}

/// Publication status
enum Status {
  ONGOING
  COMPLETED
  HIATUS
  CANCELLED
  UNKNOWN
}

/// Content rating for age appropriateness
enum ContentRating {
  SAFE
  SUGGESTIVE
  EROTICA
  PORNOGRAPHIC
}

/// Target demographic
enum Demographic {
  SHOUNEN
  SHOUJO
  SEINEN
  JOSEI
}

/// Tag category
enum TagGroup {
  GENRE
  THEME
  FORMAT
  CONTENT
}

/// Sync operation status
enum SyncStatus {
  IDLE
  SYNCING
  ERROR
}
