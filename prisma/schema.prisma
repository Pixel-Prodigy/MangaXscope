// Prisma Schema for MangaXScope
// 
// DATABASE ARCHITECTURE:
// - Database is used as a CACHE layer, not a full mirror
// - Stores normalized metadata from MangaDex (Japanese manga only)
// - Source and sourceId fields enable multi-source support
// - Short TTL for search results, longer for details
//
// Note: Consumet content is NOT cached in database as it's less stable

generator client {
  provider        = "prisma-client-js"
  engineType      = "library"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
}

// =============================================================================
// MAIN MODELS
// =============================================================================

/// Cached manga metadata from external sources
model Manga {
  id                     String        @id // Source-specific ID (MangaDex UUID)
  
  // Source tracking
  source                 DataSource    @default(MANGADEX)
  sourceId               String?       // Original ID from source (for reference)
  
  // Core metadata (normalized)
  title                  String
  altTitles              String[]      // For search expansion
  description            String?       @db.Text
  status                 Status        @default(UNKNOWN)
  year                   Int?
  contentRating          ContentRating @default(SAFE)
  publicationDemographic Demographic?
  originalLanguage       String        // ja, ko, zh, en
  
  // Chapter info
  lastChapter            String?
  lastVolume             String?
  totalChapters          Int?
  
  // Media
  coverArtId             String?
  
  // Popularity metrics
  followedCount          Int           @default(0)
  rating                 Float?
  
  // Cache management
  createdAt              DateTime      @default(now())
  updatedAt              DateTime      @updatedAt
  mangaDexUpdatedAt      DateTime      // Track source updates
  
  // TTL for cache expiration (optional, can be handled in app logic)
  expiresAt              DateTime?
  
  // Relations
  tags                   MangaTag[]

  // Indexes for efficient queries
  @@index([source])
  @@index([title])
  @@index([status])
  @@index([originalLanguage])
  @@index([year])
  @@index([totalChapters])
  @@index([followedCount])
  @@index([mangaDexUpdatedAt])
  @@index([contentRating])
  @@index([expiresAt])
}

/// Cached tags for filtering
model Tag {
  id    String   @id // Source-specific ID
  name  String
  group TagGroup

  mangas MangaTag[]

  @@index([group])
  @@index([name])
}

/// Many-to-many relation between Manga and Tag
model MangaTag {
  mangaId String
  tagId   String

  manga Manga @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  tag   Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([mangaId, tagId])
  @@index([tagId])
}

/// Sync metadata for tracking database updates
model SyncMetadata {
  id                  String     @id @default("singleton")
  lastFullSync        DateTime?
  lastIncrementalSync DateTime?
  totalMangaCount     Int        @default(0)
  syncStatus          SyncStatus @default(IDLE)
  lastError           String?
  updatedAt           DateTime   @updatedAt
}

// =============================================================================
// ENUMS
// =============================================================================

/// Data source identifier
enum DataSource {
  MANGADEX
  CONSUMET
}

/// Publication status
enum Status {
  ONGOING
  COMPLETED
  HIATUS
  CANCELLED
  UNKNOWN
}

/// Content rating for age appropriateness
enum ContentRating {
  SAFE
  SUGGESTIVE
  EROTICA
  PORNOGRAPHIC
}

/// Target demographic
enum Demographic {
  SHOUNEN
  SHOUJO
  SEINEN
  JOSEI
}

/// Tag category
enum TagGroup {
  GENRE
  THEME
  FORMAT
  CONTENT
}

/// Sync operation status
enum SyncStatus {
  IDLE
  SYNCING
  ERROR
}
